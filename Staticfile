server {
    listen 80;
    server_name kunalb.dev;

    # Root directory where your static files are located
    root /var/www/static;

    # Default index files
    index index.html index.htm;

    # Serve static files
    location / {
        try_files $uri $uri/ =404;
    }

    # Optional: Serve specific file types with appropriate MIME types
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }

    # Optional: Handle 404 errors
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    # Optional: Deny access to hidden files (files starting with a dot)
    location ~ /\. {
        deny all;
    }
}